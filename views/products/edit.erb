<h2>Edit Product</h2>

<form class="product" id="edit-product" action="/products/<%= @product[:id] %>" method="post">

<input type="hidden" name="_method" value="put">

  <div>
  <label for="Product Name">Name:
  </label>
  <input type='text' name='product[name]' value="<%= @product[:name] %>"/>
  </div>

  <div>
  <label for="Product Name">Brand id:
  </label>
  <input type='text' name='product[brand_id]' value="<%= @product[:brand_id] %>"/>
  </div>

  <div>
  <label for="Product Name">Category id:
  </label>
  <input type='text' name='product[category_id]' value="<%= @product[:category_id] %>"/>
  </div>

  <div>
    <input type="submit" class="btn">
  </div>
</form>
